---
import Boop from "./Boop.astro";
---

<footer>
    <Boop>
        <a class="link" href="mailto:contact@maartenschaep.com" target="_blank">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-mail-icon lucide-mail icon"
                ><path
                    d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"
                    class="top-envelope"></path><rect
                    x="2"
                    y="4"
                    width="20"
                    height="16"
                    rx="2"
                    class="rectangle"></rect></svg
            >
            <span>contact@maartenschaep.com</span>
        </a>
    </Boop>
    <Boop timing="600">
        <a
            class="link"
            href="https://www.linkedin.com/in/maarten-schaep-9a3076287/"
            target="_blank"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-linkedin-icon lucide-linkedin icon"
            >
                <path
                    d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                    class="n"></path>
                <rect width="4" height="12" x="2" y="9" class="i-base"
                ></rect><circle cx="4" cy="4" r="2" class="i-circle">
                </circle></svg
            >
            <span>Maarten Schaep</span>
        </a>
    </Boop>
</footer>

<style>
    footer {
        padding-top: var(--spacing-09);
        padding-bottom: var(--spacing-05);
        display: flex;
        justify-content: center;
        align-items: center;
        gap: var(--spacing-09);
        flex-wrap: wrap;
    }
    @media (width <= 30rem) {
        footer {
            gap: var(--spacing-05);
            padding-bottom: var(--spacing-07);
        }
    }
    .link {
        font: var(--body-small-mono);
        text-decoration: none;
        color: var(--color-normal);
        display: flex;
        align-items: center;
        gap: var(--spacing-03);
    }

    .link:hover {
        text-decoration: underline;
    }
</style>
