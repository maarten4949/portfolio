---
import "../styles/global.css";
const currentLocale = Astro.currentLocale ? Astro.currentLocale : "en";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/google-sans-code";
import "@fontsource/google-sans-flex";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="This is the portfolio site from Maarten Schaep, here you can see all his projects and the technologies that he uses."
        />
        <title>Maarten Schaep Portfolio</title>
    </head>
    <body>
        <NavBar />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
